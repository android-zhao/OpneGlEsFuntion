<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.opengldemo">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OpenGlDemo">
        <activity
            android:name=".activity.VideoPlaybyOpenGLActivity"
            android:exported="false" />
        <activity
            android:name=".activity.PreviewAndVideoActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ShaderToyActivity"
            android:exported="false" />
        <activity
            android:name=".GlTransitionActivity"
            android:exported="false"
            android:label="@string/title_activity_gl_transition"
            android:theme="@style/Theme.OpenGlDemo.NoActionBar" />
        <activity
            android:name=".activity.OpenGlTransitionActivity"
            android:exported="false" />
        <activity
            android:name=".activity.NativeEglActivity"
            android:exported="false" />
        <activity
            android:name=".activity.RecordActivity"
            android:exported="false" />
        <activity
            android:name=".AnimationActivity"
            android:exported="false" />
        <activity android:name=".activity.CameraViewMatrixActivity" />
        <activity android:name=".activity.FboActivity" />
        <activity android:name=".activity.WaterMarkActivity" />
        <activity android:name=".activity.MVPTestActivity" />
        <activity android:name=".activity.CameraTestActivity" />
        <activity android:name=".activity.GlsurfaceActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>